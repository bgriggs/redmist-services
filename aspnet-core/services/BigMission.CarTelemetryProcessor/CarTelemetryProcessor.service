[Unit]
Description=Car Telemetry Processor
After=multi-user.target

StartLimitIntervalSec=30
StartLimitBurst=10

[Service]
Restart=always
RestartSec=10s

WorkingDirectory=/home/redmist/BigMission.CarTelemetryProcessor
ExecStart=/usr/bin/dotnet /home/redmist/BigMission.CarTelemetryProcessor/BigMission.CarTelemetryProcessor.dll
Environment=ASPNETCORE_ENVIRONMENT=Production

[Install]
WantedBy=multi-user.target

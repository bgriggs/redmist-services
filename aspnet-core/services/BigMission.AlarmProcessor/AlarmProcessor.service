[Unit]
Description=Alarm Processor
After=multi-user.target

StartLimitIntervalSec=30
StartLimitBurst=10

[Service]
Restart=on-failure
RestartSec=10s

WorkingDirectory=/home/redmist/BigMission.AlarmProcessor
ExecStart=/usr/bin/dotnet /home/redmist/BigMission.AlarmProcessor/BigMission.AlarmProcessor.dll

[Install]
WantedBy=multi-user.target
<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true">

	<extensions>
		<add assembly="NLog.Web.AspNetCore"/>
	</extensions>

	<!-- the targets to write to -->
	<targets>
		<!--<target xsi:type="Console" name="c" layout="${date}|${level:uppercase=true}|${message} ${exception}" />-->
		<target xsi:type="ColoredConsole"
				name="c"
				layout="${longdate} ${uppercase:${level}} ${logger} ${message}${exception:format=tostring}"
				encoding="utf-8"
                useDefaultRowHighlightingRules="true"/>


		<target name="jsonFile" xsi:type="File" fileName="BigMission.AlarmProcessor.log" archiveAboveSize="100000000" maxArchiveFiles="1">
			<layout xsi:type="JsonLayout" includeAllProperties="false">
				<attribute name="time" layout="${longdate}" />
				<attribute name="level" layout="${level:upperCase=true}"/>
				<attribute name="message" layout="${message}" />
			</layout>
		</target>

		<target xsi:type="Redis" name="redis" host="127.0.0.1" port="6379" password="***REMOVED***"
				key="servicelog.1279a886-3c40-42f8-a3fd-fecba3f19527" dataType="list" maxListLength="1000" lengthTrimSecs="30"
				layout="${longdate} ${uppercase:${level}} ${message}" />
	</targets>

	<!-- rules to map from logger name to target -->
	<rules>
		<logger name="Microsoft.*" maxLevel="Warn" final="true" />
		<logger name="*" minlevel="Trace" writeTo="c" />
	</rules>
</nlog>
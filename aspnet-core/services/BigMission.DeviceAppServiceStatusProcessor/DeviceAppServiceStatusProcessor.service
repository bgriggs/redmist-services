[Unit]
Description=Device App Service Status Processor
After=multi-user.target

StartLimitIntervalSec=30
StartLimitBurst=10

[Service]
Restart=always
RestartSec=10s

WorkingDirectory=/home/redmist/BigMission.DeviceAppServiceStatusProcessor
ExecStart=/usr/bin/dotnet /home/redmist/BigMission.DeviceAppServiceStatusProcessor/BigMission.DeviceAppServiceStatusProcessor.dll
Environment=ASPNETCORE_ENVIRONMENT=Production

[Install]
WantedBy=multi-user.target

<?xml version="1.0" encoding="utf-8" ?>
<!-- XSD manual extracted from package NLog.Schema: https://www.nuget.org/packages/NLog.Schema-->
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xsi:schemaLocation="NLog NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true">

  <!-- the targets to write to -->
  <targets>
    <target xsi:type="Console" name="c" layout="${date}|${level:uppercase=true}|${message} ${exception}"/>
    
    <target name="jsonFile" xsi:type="File" fileName="BigMission.KeypadServices.log" archiveAboveSize="100000000" maxArchiveFiles="1">
      <layout xsi:type="JsonLayout" includeAllProperties="false">
        <attribute name="time" layout="${longdate}" />
        <attribute name="level" layout="${level:upperCase=true}"/>
        <attribute name="message" layout="${message}" />
      </layout>
    </target>

    <target xsi:type="Redis" name="redis" host="127.0.0.1" port="6379" password="***REMOVED***"
            key="servicelog.95b3fb21-2d5e-4eb7-8a75-fae097505183" dataType="list" maxListLength="1000" lengthTrimSecs="30"
            layout="${longdate} ${uppercase:${level}} ${message}" />
  </targets>

  <!-- rules to map from logger name to target -->
  <rules>
    <logger name="*" minlevel="Trace" writeTo="jsonFile,c,redis" />
  </rules>
</nlog>
[Unit]
Description=Keypad Services
After=multi-user.target

StartLimitIntervalSec=30
StartLimitBurst=10

[Service]
Restart=always
RestartSec=10s

WorkingDirectory=/home/redmist/BigMission.KeypadServices
ExecStart=/usr/bin/dotnet /home/redmist/BigMission.KeypadServices/BigMission.KeypadServices.dll
Environment=ASPNETCORE_ENVIRONMENT=Production

[Install]
WantedBy=multi-user.target
[Unit]
Description=Virtual Channel Aggregator
After=multi-user.target

StartLimitIntervalSec=30
StartLimitBurst=10

[Service]
Restart=on-failure
RestartSec=10s

WorkingDirectory=/home/redmist/BigMission.VirtualChannelAggregator
ExecStart=/usr/bin/dotnet /home/redmist/BigMission.RaceHeroAggregator/BigMission.VirtualChannelAggregator.dll
Environment=ASPNETCORE_ENVIRONMENT=Production

[Install]
WantedBy=multi-user.target

[Unit]
Description=Log Archive Purge
After=multi-user.target

StartLimitIntervalSec=30
StartLimitBurst=10

[Service]
Restart=always
RestartSec=10s

WorkingDirectory=/home/bgriggs/LogArchivePurge
ExecStart=/home/bgriggs/.dotnet/dotnet /home/bgriggs/LogArchivePurge/BigMission.LogArchivePurge.dll
Environment=ASPNETCORE_ENVIRONMENT=Production

[Install]
WantedBy=multi-user.target
